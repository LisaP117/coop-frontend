{
  "name": "@coopdigital/component-template",
  "version": "1.0.4",
  "description": "Co-op Component/CSS Module Template",
  "main": "src/component.html",
  "style": "src/component.css",
  "author": "Matthew Morek (matthew.morek@coopdigital.co.uk)",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "lint": "node_modules/.bin/stylelint 'dist/*.css' --fix",
    "build": "node_modules/.bin/postcss src/*.pcss --dir dist/ --ext css",
    "dist": "npm run build && npm run lint",
    "init": "rm -rf ./.git && git init"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coopdigital/component-template.git"
  },
  "devDependencies": {
    "@coopdigital/css-foundations": "^1.7.6",
    "autoprefixer": "^9.3.1",
    "cssnano": "^4.1.7",
    "postcss": "^7.0.5",
    "postcss-cli": "^6.0.1",
    "postcss-import": "^12.0.1",
    "postcss-load-config": "^2.0.0",
    "precss": "^3.1.2",
    "prettier": "^1.14.3",
    "stylelint": "^9.10.1",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-prettier": "^1.0.3"
  }
}
