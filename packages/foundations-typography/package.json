{
  "name": "@coopdigital/foundations-typography",
  "version": "2.1.2",
  "description": "Co-op Foundations: Typography",
  "main": "dist/typography.css",
  "style": "src/typography.pcss",
  "author": "Matt Tyas (matt.tyas@coopdigital.co.uk)",
  "license": "MIT",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "lint:src": "stylelint 'src/*.{css,pcss}' --fix",
    "lint:dist": "stylelint 'dist/*.css' --fix",
    "build": "postcss src/*.pcss --dir dist/ --ext css",
    "dist": "npm run lint:src && npm run build && npm run lint:dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coopdigital/foundations-typography.git"
  },
  "devDependencies": {
    "@coopdigital/foundations-vars": "^1.2.4",
    "autoprefixer": "^9.6.0",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.2",
    "postcss-import": "^12.0.1",
    "postcss-load-config": "^2.1.0",
    "precss": "^4.0.0",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-prettier": "^1.1.1"
  }
}
